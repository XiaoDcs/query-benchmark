{
  "name": "web-page-scorer",
  "version": "1.0.3",
  "description": "A desktop application for efficiently scoring web pages from Excel files with enhanced keyboard shortcuts, configurable smart preloading, auto-advance features, and page jump functionality",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --publish=never",
    "build:mac": "electron-builder --mac --publish=never",
    "build:win": "electron-builder --win --publish=never",
    "build:all": "electron-builder --mac --win --publish=never",
    "dist": "npm run build"
  },
  "keywords": [
    "web",
    "scoring",
    "excel",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourcompany.web-page-scorer",
    "productName": "Web Page Scorer",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "Web Page Scorer ${version}"
    }
  }
}
